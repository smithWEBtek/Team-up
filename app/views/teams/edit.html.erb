<h1>Edit Team Form</h1>

<%= form_for @team do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :type_player %>
    <%= f.text_field :type_player %><br>
    <%= f.label :role %>
    <%= f.text_field :role %><br>
    <%= f.label :quote %>
    <%= f.text_field :quote %><br>
    <br />
    <%= f.submit %>
<% end %>

<% if @team.errors.any? %>
  <div class="error_explanation">
    <% @team.errors.full_messages.each do |msg| %>
      <%= msg %><br>
    <% end %>
  </div>
<% end %>
